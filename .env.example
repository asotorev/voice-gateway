# VOICE GATEWAY - ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ENVIRONMENT & DEPLOYMENT
ENVIRONMENT=development
STAGE=dev
IS_PRODUCTION=false

# API CONFIGURATION
API_VERSION=v1
API_TITLE="Voice Gateway API"
API_DESCRIPTION="Biometric voice authentication system"
APP_HOST=localhost
APP_PORT=8080
APP_PROTOCOL=http
LOG_LEVEL=INFO
LOG_FORMAT=json

# AWS CONFIGURATION
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=access_key_here
AWS_SECRET_ACCESS_KEY=secret_key_here

# AWS Client Configuration
AWS_MAX_RETRY_ATTEMPTS=3
AWS_MAX_POOL_CONNECTIONS=50

# DYNAMODB CONFIGURATION
DYNAMODB_ENDPOINT_URL=http://localhost:8000
USERS_TABLE_NAME=voice-gateway-users-local
DYNAMODB_PASSWORD_GSI_NAME=password-hash-index

# S3 CONFIGURATION
S3_BUCKET_NAME=voice-gateway-audio-dev
S3_ENDPOINT_URL=http://localhost:9000
S3_USE_SSL=false
S3_SIGNATURE_VERSION=s3v4

# AUDIO STORAGE CONFIGURATION
AUDIO_BASE_URL=s3://voice-gateway-audio-dev
AUDIO_UPLOAD_EXPIRATION_MINUTES=15
AUDIO_DOWNLOAD_EXPIRATION_MINUTES=60
MAX_AUDIO_FILE_SIZE_MB=10
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a
MAX_AUDIO_FILE_SIZE_BYTES=10485760
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac
REQUIRED_AUDIO_SAMPLES=3

# LAMBDA CONFIGURATION
# Lambda Function Settings
LAMBDA_FUNCTION_NAME=audio-embedding-processor
LAMBDA_TIMEOUT=900
LAMBDA_MEMORY_SIZE=3008
LAMBDA_RUNTIME=python3.9

# Lambda Processing Settings
LAMBDA_MAX_RETRIES=3
LAMBDA_CONCURRENT_EXECUTIONS=10
LAMBDA_LOG_LEVEL=INFO

# RESEMBLYZER/EMBEDDING CONFIGURATION
VOICE_EMBEDDING_DIMENSIONS=256
USE_MOCK_EMBEDDING_SERVICE=false

# SECURITY & AUTHENTICATION
API_SECRET_KEY=super-secret-key
JWT_SECRET_KEY=jwt-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Generation Settings
PASSWORD_LENGTH=12
PASSWORD_SPECIAL_CHARS=@#$%^&*
MAX_GENERATION_ATTEMPTS=10

# LAMBDA DEPLOYMENT CONFIGURATION
# Serverless Framework Settings
SERVERLESS_SERVICE_NAME=voice-gateway-lambda
SERVERLESS_PROVIDER_NAME=aws

# IAM Role Settings
LAMBDA_EXECUTION_ROLE_NAME=VoiceGatewayLambdaExecutionRole
LAMBDA_S3_ACCESS_ROLE_NAME=VoiceGatewayS3AccessRole

# S3 Event Triggers
S3_TRIGGER_EVENT=s3:ObjectCreated:*
S3_TRIGGER_PREFIX=audio-uploads/
S3_TRIGGER_SUFFIX=.wav

# Lambda Layers
LAMBDA_LAYER_NAME=resemblyzer-layer
LAMBDA_LAYER_RUNTIME=python3.9

# MONITORING & LOGGING
# CloudWatch Settings
CLOUDWATCH_LOG_GROUP=/aws/lambda/audio-embedding-processor
CLOUDWATCH_LOG_RETENTION_DAYS=14

# DEVELOPMENT & TESTING
# Test Database Settings
TEST_DYNAMODB_TABLE_NAME=voice_gateway_users_test
TEST_S3_BUCKET_NAME=voice-gateway-audio-test

# Mock Services (for development)
USE_MOCK_REPOSITORIES=false
USE_MOCK_STORAGE=false
