# Voice Gateway - Environment Configuration Template
# Copy this file to .env.local and modify values as needed

# Development Environment
ENVIRONMENT=development

# API Configuration
API_VERSION=v1
API_TITLE="Voice Gateway API"
API_DESCRIPTION="Biometric voice authentication system"

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=access_key_here
AWS_SECRET_ACCESS_KEY=secret_key_here

# DynamoDB Configuration
DYNAMODB_ENDPOINT_URL=http://localhost:8000
DYNAMODB_REGION=us-east-1
USERS_TABLE_NAME=voice-gateway-users-local

# Audio Storage Configuration (storage provider independent)
AUDIO_BASE_URL=s3://voice-gateway-audio/

# Security
API_SECRET_KEY=super-secret-key
JWT_SECRET_KEY=jwt-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json